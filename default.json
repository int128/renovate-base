{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":automergeMinor",
    ":automergeDigest",
    ":assignAndReview(int128)"
  ],
  "platformAutomerge": false,
  "labels": [
    "renovate",
    "renovate/{{depName}}"
  ],
  "timezone": "Asia/Tokyo",
  "schedule": [
    "before 8am on Saturday",
    "before 8am on Sunday"
  ],
  "minimumReleaseAge": "7 days",
  "gitIgnoredAuthors": [
    "41898282+github-actions[bot]@users.noreply.github.com"
  ],
  "packageRules": [
    {
      "description": "Auto-merge specific packages",
      "matchPackageNames": [
        "actions/checkout",
        "docker/login-action",
        "docker/setup-buildx-action",
        "docker/setup-qemu-action",
        "@actions/*"
      ],
      "automerge": true
    },
    {
      "description": "Immediately update specific packages",
      "matchPackageNames": [
        "int128/typescript-action-renovate-config"
      ],
      "minimumReleaseAge": "0"
    }
  ]
}
